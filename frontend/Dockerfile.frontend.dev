# Local development Dockerfile for Docker Desktop
# Build from frontend directory: docker build -f Dockerfile.frontend.dev -t marketplace-frontend-local .
# Run: docker run -p 3000:3000 --env-file .env marketplace-frontend-local

# Development stage
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files and quasar config
COPY package*.json ./
COPY quasar.config.js ./
COPY index.html ./

# Copy source code first (needed for scripts)
COPY . .

# Install dependencies
RUN sed -i 's|../node_modules/.bin/|./node_modules/.bin/|g' package.json && npm ci

# Expose port for development server
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--port", "3000"]