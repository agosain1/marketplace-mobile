# Local development Dockerfile for Docker Desktop
# Build: docker build -f Dockerfile.frontend.dev -t marketplace-frontend-local .
# Run: docker run -p 3000:3000 --env-file .env marketplace-frontend-local

# Development stage
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files and quasar config
COPY package*.json ./
COPY quasar.config.js ./
COPY index.html ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port for development server
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--port", "3000"]